{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "es2015"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "incremental": true
  },
  "include": ["styles.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
